# ===========================================
# Variables d'environnement pour Web Yarden
# ===========================================
# Copiez ce fichier vers .env.local et remplissez les valeurs
# Pour la production, configurez ces variables dans votre plateforme de déploiement

# ===========================================
# CONFIGURATION GÉNÉRALE
# ===========================================

# URL du site (obligatoire pour la production)
NEXT_PUBLIC_SITE_URL=https://webyarden.co.il

# Environnement (development, staging, production)
NODE_ENV=production

# ===========================================
# ANALYTICS & TRACKING
# ===========================================

# Google Analytics ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=

# Google Search Console Verification Code
NEXT_PUBLIC_GOOGLE_VERIFICATION=

# ===========================================
# SERVICES EMAIL
# ===========================================

# Configuration EmailJS (obligatoire pour les formulaires)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=

# ===========================================
# INFORMATIONS DE CONTACT
# ===========================================

# Email principal de contact
NEXT_PUBLIC_CONTACT_EMAIL=contact@webyarden.co.il

# Numéro de téléphone avec indicatif international
NEXT_PUBLIC_CONTACT_PHONE=+972 53 370 0551

# Numéro WhatsApp (sans espaces ni caractères spéciaux)
NEXT_PUBLIC_WHATSAPP_NUMBER=+972533700551

# Adresse physique
NEXT_PUBLIC_CONTACT_ADDRESS=Tel Aviv, Israël

# ===========================================
# RÉSEAUX SOCIAUX
# ===========================================

NEXT_PUBLIC_FACEBOOK_URL=https://www.facebook.com/webyarden
NEXT_PUBLIC_INSTAGRAM_URL=https://www.instagram.com/webyarden
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/company/web-yarden
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/webyarden

# ===========================================
# DÉPLOIEMENT VERCEL (CI/CD)
# ===========================================

# Identifiants Vercel pour déploiement automatique
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=
VERCEL_TOKEN=

# ===========================================
# SÉCURITÉ & PERFORMANCE
# ===========================================

# Clé secrète pour l'admin (générez une clé forte)
ADMIN_PASSWORD=

# Rate limiting (requêtes par minute)
RATE_LIMIT_RPM=60

# ===========================================
# DÉVELOPPEMENT LOCAL UNIQUEMENT
# ===========================================

# Port de développement (par défaut: 3000)
PORT=3000

# Debug mode pour le développement
DEBUG=false
